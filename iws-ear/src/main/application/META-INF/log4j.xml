<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">

    <appender name="logfile" class="org.apache.log4j.FileAppender">
        <param name="Append" value="false" />
        <param name="Encoding" value="UTF-8" />
        <param name="File" value="${com.sun.aas.instanceRoot}/logs/iws.log" />
        <layout class="com.secunet.log4j.ext.EnhancedPatternLayout">
            <param name="ConversionPattern" value="%d{ISO8601} %-5p [%t] (%F:%L) %m %X%n" />
        </layout>
    </appender>

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <param name="Target" value="System.out" />
        <layout class="org.apache.log4j.PatternLayout">
            <param name="ConversionPattern" value="%-5p %c{1} - %m%n" />
        </layout>
    </appender>

    <logger name="net.iaeste.iws">
        <level value="trace" />
        <appender-ref ref="logfile" />
        <appender-ref ref="console" />
    </logger>

    <logger name="org.springframework">
        <level value="warn" />
        <appender-ref ref="logfile" />
    </logger>

    <logger name="org.hibernate">
        <level value="warn" />
        <appender-ref ref="logfile" />
    </logger>

    <root>
        <priority value="info" />
        <appender-ref ref="logfile" />
        <appender-ref ref="console" />
    </root>

</log4j:configuration>
